<body>

  <h2>Nivel de Diesel (desde ESP32 vía EMQX)</h2>

  <div class="tabs">
    <div class="tab active" onclick="showTab(0)">Nivel Diesel OTY</div>
    <div class="tab" onclick="showTab(1)">Nivel Diesel ITR</div>
  </div>

  <div id="tab-0" class="tab-content active">
    <div class="tank-area">
      <div class="diesel-title">Tanque OTY</div>
      <div class="diesel-tank">
        <div id="diesel-fill-0" class="diesel-fill"></div>
        <div id="diesel-text-0" class="diesel-text">0%</div>
      </div>
    </div>
  </div>     
            
  <div id="tab-1" class="tab-content">
    <div class="tank-area">
      <div class="diesel-title">Tanque ITR</div>
      <div class="diesel-tank">
        <div id="diesel-fill-1" class="diesel-fill"></div>
        <div id="diesel-text-1" class="diesel-text">0%</div>
      </div>
    </div>
  </div>

<script>
  const client = mqtt.connect('wss://d4e6f442.ala.us-east-1.emqxsl.com:8084/mqtt', {
    clientId: 'web_' + Math.random().toString(16).substr(2, 8),
    username: 'Olivas',
    password: 'Jangel27'
  });
      
  client.on('connect', () => {
    console.log('✅ Conectado a EMQX');
    // Nos suscribimos a ambos posibles tópicos (ajusta según tus necesidades)
    client.subscribe('esp32/NivelDiesel_OTY');
    client.subscribe('esp32/NivelDiesel_ITR');
  });      
      
  client.on('message', (topic, message) => {
    const porcentaje = parseInt(message.toString());
    console.log(`Mensaje recibido en ${topic}: ${porcentaje}%`);

    if (topic === 'esp32/NivelDiesel_OTY') {
      updateDieselLevel(porcentaje, 0);
    } else if (topic === 'esp32/NivelDiesel_ITR') {
      updateDieselLevel(porcentaje, 1);
    }
  });
       
  function showTab(index) {
    document.querySelectorAll('.tab').forEach((tab, i) => {
      tab.classList.toggle('active', i === index);
    });
    document.querySelectorAll('.tab-content').forEach((content, i) => {
      content.classList.toggle('active', i === index);
    });
  }

  function updateDieselLevel(porcentaje, index) {
    const fill = document.getElementById(`diesel-fill-${index}`);
    const text = document.getElementById(`diesel-text-${index}`);
    if (!fill || !text) return;

    const nivel = Math.max(0, Math.min(100, porcentaje));
    fill.style.height = `${nivel}%`;

    // Cambiar colores según nivel
    if (nivel < 20) {
      fill.style.background = 'linear-gradient(to top, #800000, #ff0000)';
    } else if (nivel < 50) {
      fill.style.background = 'linear-gradient(to top, #e6b800, #ffff00)';
    } else {
      fill.style.background = 'linear-gradient(to top, #007b00, #00ff00)';
    }
    text.textContent = `${nivel}%`;
  }
</script>
